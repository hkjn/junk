[Unit]
Description=My junk app
After=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill junkapp
ExecStartPre=-/usr/bin/docker rm junkapp
ExecStartPre=/usr/bin/docker pull hkjn/junkapp:v1
ExecStart=/usr/bin/docker run -p 8080:8080 --name junkapp  -t hkjn/junkapp:v1
ExecStop=/usr/bin/docker stop junkapp
